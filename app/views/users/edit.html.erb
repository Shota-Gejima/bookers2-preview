<div class="container">
  
  <div class="row">
    

    <div class="mx-auto">
      
      <h1>User info</h1>

      <% if @user.errors.any? %>
      
        <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
        
        <ul>
        
          <% @user.errors.full_messages.each do |message| %>
        
            <li><%= message %></li>
          
          <% end %>
        
        </ul>
      
        <% end %>
          
      
      
      <%= form_with model: @user do |f| %>
      
        <label for="inputTitle">Name</label></br>
      
        <%= f.text_field :name, autofocus: true, id:"inputName" %></br>
        
        <label for="inputImage">Image</label></br>
        
        <%= f.file_field :profile_image, accept: "image/*" %></br>
        
        <label for="inputBody">Introduction</label></br>
        
        <%= f.text_area :introduction %></br>
        
         <button type="submit" class="btn btn-success">Update User</button>
        
      <% end %>

    </div>
    
  </div>
  
</div>



